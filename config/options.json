{
    "PORT": 5000,
    "BODY": {
        "URLENCODED": { "extended": true, "limit": "50mb" },
        "JSON": { "limit": "50mb" }
    },
    "CORS": {
        "allowedHeaders": ["Authorization", "Content-Type"],
        "methods": ["GET", "POST", "PUT", "DELETE", "PATCH"],
        "origin": "*"
    },
    "LOGGER": "dev",
    "MONGODB": {
        "DB": "nodejs-express-starter",
        "HOST": "mongodb://mongo",
        "OPTIONS": {
            "autoReconnect": true,
            "reconnectTries": 1000,
            "reconnectInterval": 100
        }
    }
}
